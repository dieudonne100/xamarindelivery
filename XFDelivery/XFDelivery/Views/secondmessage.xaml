<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XFDelivery.Views.firstmessage"
             BackgroundColor="#FA4A0C">
    <StackLayout Orientation="Vertical">
        <Image Source="delivery.png" WidthRequest="250"
                Margin="0,40,0,0"/>
        <StackLayout>
            <Label
                HorizontalOptions="Center"
                Margin="35,50,35,0" 
                TextColor="White" 
                Text=" Get The Fastest Delivery Food For You "
                FontSize="Title"
                FontAttributes="Bold">
            </Label>
            <Label
                HorizontalOptions="Center"
                Text="order food and get delivery within a few minutes to you door"
                Margin="35,0,35,50"
                FontSize="Subtitle"
                FontAttributes="None"
                TextColor="White">
                
            </Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center">
            <Frame BackgroundColor="White" CornerRadius="100" WidthRequest="-30" HeightRequest="-30" ></Frame>
            <Frame BackgroundColor="#06623B" CornerRadius="100" WidthRequest="-30" HeightRequest="-30"> </Frame>
            <Frame BackgroundColor="White" CornerRadius="100" WidthRequest="-30" HeightRequest="-30"></Frame>

        </StackLayout>
        <StackLayout>
            <Button 
           Clicked="Button_Clicked"
                BackgroundColor="White"
                Margin="50,30" 
                Text="Get started"
                TextColor="#FA4A0C"
                CornerRadius="19"
                FontAttributes="Bold">

            </Button>
        </StackLayout>
    </StackLayout>

</ContentPage>